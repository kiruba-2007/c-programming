#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

  int pizzas=12,puffs=7,cooldrinks=3;
   int pizza_price=100;
    int puffs_price=20;
    int cooldrinks_price=10;
    int totalprice;
        totalprice=pizzas*pizza_price+puffs*puffs_price+cooldrinks*cooldrinks_price;
    scanf("%d %d %d",&pizzas,&puffs,&cooldrinks);
    printf("Bill Details\n");
    printf("No of pizzas:%d\n",pizzas);
    printf("No of puffs:%d\n",puffs);
    printf("No of cooldrinks:%d\n",cooldrinks);
    printf("Total price=%d\n",totalprice);
    printf("ENJOY THE SHOW!!!");
    return 0;
}
